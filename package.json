{
  "type": "module",
  "name": "needhagold",
  "version": "0.1.0",
  "private": true,
  "main": "main/main.js",
  "author": "Sai Charan Vadhyar",
  "description": "Electron + NextJS ERP",
  "scripts": {
    "dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev\" \"electron .\"",
    "build": "npm run generate-icons && set NODE_OPTIONS=--max-old-space-size=8192 && next build && electron-builder",
    "start": "next start",
    "clean": "rm -rf .next out dist && npm cache clean --force",
    "rebuild": "npm run clean && npm install && npm run dev",
    "lint": "next lint",
    "generate-icons": "electron-icon-builder --input=./assets/needhagoldlogo.png --output=build --flatten"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.12.5",
    "@emotion/cache": "^11.11.0",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.15.6",
    "@mui/material-nextjs": "^5.15.6",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@types/react-datepicker": "^7.0.0",
    "class-variance-authority": "^0.7.0",
    "cmdk": "^1.0.4",
    "dropzone": "^6.0.0-beta.2",
    "electron-serve": "^2.1.1",
    "geist": "^1.2.0",
    "html2pdf.js": "^0.12.1",
    "jspdf": "^3.0.0",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.294.0",
    "next": "^14.2.32",
    "node-fetch": "^3.3.2",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^4.0.379",
    "qrcode": "^1.5.4",
    "radix-ui": "^1.0.1",
    "react": "^18.3.1",
    "react-circular-progressbar": "^2.1.0",
    "react-datepicker": "^4.25.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.49.3",
    "react-hot-toast": "^2.4.1",
    "react-modal-video": "^2.0.1",
    "sass": "^1.69.7",
    "sonner": "^1.3.1",
    "swiper": "^11.0.5",
    "tailwind-variants": "^0.1.20",
    "xlsx": "^0.18.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.8",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.1",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.atmalogic.erp",
    "productName": "AtmaLogic ERP",
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main/**/*",
      "out/**/*",
      "package.json",
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "out",
        "to": "app/out"
      }
    ],
    "win": {
      "icon": "build/icons/win/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PSM GOLD CRAFTS"
    }
  }
}
